{
    "compilerOptions": {
      "skipLibCheck": true,
      "target": "esnext",
      "module": "commonjs",
      "lib": ["dom", "esnext"],
      "allowJs": true,
      "jsx": "react",
      "declaration": false,
      "sourceMap": true,
      "rootDir": "./",
      "noEmit": true,
      "isolatedModules": true,
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "types": ["node"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": ["./src/**/*"]
  }
